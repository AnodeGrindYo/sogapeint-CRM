<div class="container-fluid">
    <app-pagetitle title="Saisie d'une commande" [breadcrumbItems]="breadCrumbItems"></app-pagetitle>
    <form>
        
        <!-- Première ligne de cartes -->
        <div class="row mb-3">
            <!-- Carte Informations Générales -->
            <div class="col-md-6">
                <div class="card">
                    <div class="card-header">Informations Générales</div>
                    <div class="card-body">
                        <div class="mb-3">
                            <label for="numeroInterne" class="form-label">N° Interne</label>
                            <input type="text" class="form-control" id="numeroInterne" ngModel name="numeroInterne">
                        </div>
                        <div class="mb-3">
                            <label for="residenceAdresse" class="form-label">Résidence / Adresse</label>
                            <input type="text" class="form-control" id="residenceAdresse" ngModel name="residenceAdresse">
                        </div>
                        <div class="mb-3">
                            <label for="numeroAppart" class="form-label">N° appart</label>
                            <input type="text" class="form-control" id="numeroAppart" ngModel name="numeroAppart">
                        </div>
                    </div>
                </div>
            </div>
            
            <!-- Carte Détails du Contact -->
            <div class="col-md-6">
                <div class="card">
                    <div class="card-header">Détails du Contact</div>
                    <div class="card-body">
                        <div class="mb-3">
                            <label for="contact" class="form-label">Contact</label>
                            <input type="text" class="form-control" id="contact" ngModel name="contact">
                        </div>
                        <div class="mb-3">
                            <label for="adresse" class="form-label">Adresse</label>
                            <input type="text" class="form-control" id="adresse" ngModel name="adresse">
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
        
        <!-- Deuxième ligne de cartes -->
        <div class="row mb-3">
            <!-- Carte Informations Complémentaires -->
            <div class="col-md-6">
                <div class="card">
                    <div class="card-header">Informations Complémentaires</div>
                    <div class="card-body">
                        <div class="mb-3">
                            <label for="numeroDevis" class="form-label">Numéro devis</label>
                            <input type="text" class="form-control" id="numeroDevis" ngModel name="numeroDevis">
                        </div>
                        <div class="mb-3">
                            <label for="occupe" class="form-label">Occupé (Oui/Non)</label>
                            <select class="form-control" id="occupe" ngModel name="occupe">
                                <option value="">Sélectionner</option>
                                <option value="true">Oui</option>
                                <option value="false">Non</option>
                            </select>
                        </div>
                    </div>
                </div>
            </div>
            
            <!-- Carte Prestation -->
            <div class="col-md-6">
                <div class="card">
                    <div class="card-header">Prestation</div>
                    <div class="card-body">
                        <div class="mb-3">
                            <div class="input-group">
                                <!-- <label for="prestation" class="form-label">Prestation</label><br/> -->
                                <select class="form-control" id="prestation" ngModel name="prestation">
                                    <option value="5e4ba27006d62fd4a4e49916">Peinture</option>
                                    <option value="5e4ba27606d62fd4a4e49917">Sol</option>
                                    <option value="5e52cb8148f8b27b3d077a84">Électricité</option>
                                    <option value="5e52cb8148f8b27b3d077a85">Plomberie</option>
                                    <option value="5e52cb8148f8b27b3d077a86">Maçonnerie</option>
                                    <option value="5e52cb8148f8b27b3d077a87">Menuiserie</option>
                                    <option value="5e52cb8148f8b27b3d077a88">Vitrification</option>
                                    <option value="5e52cb8148f8b27b3d077a89">Nettoyage</option>
                                    <option value="5f58fef3bfdad857fcfbba50">Faïence</option>
                                    <option value="5f58fefdbfdad857fcfbba51">Placo</option>
                                    <option value="5f58ff06bfdad857fcfbba52">Carrelage</option>
                                </select>

                                <div class="input-group-append">
                                    <span class="input-group-text">
                                      <i class="fa-solid fa-chevron-down"></i> <!--icône chevron bas-->
                                    </span>
                                  </div>
                            </div>
                            
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
        
