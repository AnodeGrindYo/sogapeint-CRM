        <!-- Troisième ligne de cartes -->
        <div class="row mb-3">
            <!-- Carte Intervenants -->
            <div class="col-md-6">
                <div class="card">
                    <div class="card-header">Intervenants</div>
                    <div class="card-body">
                        <div class="mb-3">
                            <label for="sogapeint" class="form-label">Sogapeint</label>
                            <input type="text" class="form-control" id="sogapeint" ngModel name="sogapeint">
                        </div>
                        <div class="mb-3">
                            <label for="co-traitant" class="form-label">Co-traitant</label>
                            <input type="text" class="form-control" id="co-traitant" ngModel name="co-traitant">
                        </div>
                        <div class="mb-3">
                            <label for="sous-traitant" class="form-label">Sous-traitant</label>
                            <input type="text" class="form-control" id="sous-traitant" ngModel name="sous-traitant">
                        </div>
                    </div>
                </div>
            </div>
            
            <!-- Carte Temps Exécution -->
            <div class="col-md-6">
                <div class="card">
                    <div class="card-header">Temps Exécution</div>
                    <div class="card-body">
                        <div class="mb-3">
                            <label for="heureDonnee" class="form-label">Heure donnée</label>
                            <input type="text" class="form-control" id="heureDonnee" ngModel name="heureDonnee">
                        </div>
                        <div class="mb-3">
                            <label for="jourDonne" class="form-label">Jour donné</label>
                            <input type="text" class="form-control" id="jourDonne" ngModel name="jourDonne">
                        </div>
                        <div class="mb-3">
                            <label for="heureEcart" class="form-label">Heure écart</label>
                            <input type="text" class="form-control" id="heureEcart" ngModel name="heureEcart">
                        </div>
                        <div class="mb-3">
                            <label for="jourEcart" class="form-label">Jour écart</label>
                            <input type="text" class="form-control" id="jourEcart" ngModel name="jourEcart">
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
        <!-- Quatrième ligne de cartes -->
        <div class="row mb-3">
            <!-- Carte Dates -->
            <div class="col-md-6">
                <div class="card">
                    <div class="card-header">Dates</div>
                    <div class="card-body">
                        <div class="mb-3">
                            <label for="dateDebut" class="form-label">Date début</label>
                            <input type="date" class="form-control" id="dateDebut" ngModel name="dateDebut">
                        </div>
                        <div class="mb-3">
                            <label for="dateFin" class="form-label">Date fin</label>
                            <input type="date" class="form-control" id="dateFin" ngModel name="dateFin">
                        </div>
                        <div class="mb-3">
                            <label for="dateFinClient" class="form-label">Date fin client</label>
                            <input type="date" class="form-control" id="dateFinClient" ngModel name="dateFinClient">
                        </div>
                    </div>
                </div>
            </div>
            <!-- Carte GED -->
            <div class="col-md-6">
                <div class="card">
                    <div class="card-header">GED</div>
                    <div class="card-body">
                        <div class="mb-3">
                            <label for="ged" class="form-label">GED</label>
                            <textarea class="form-control" id="ged" rows="3" ngModel name="ged"></textarea>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="row">
            <div class="col">
                <button type="submit" class="btn btn-primary">Valider</button>
            </div>
        </div>
    </form>
</div>

